<main>
    <div id="release">
        <h3><%= release.title %></h2>
        <a href="/artist/<%= release.artist %>"><h3><%= release.artist %></h3></a>
        <h4><%= release.genre %></h4>
        <h4><%= release.catalog_number %></h5>

        <% if (isLoggedIn()) { %>
        <a href="/release/<%= release.id %>/edit">Edit</a>
        <form action="/release/<%= release.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button>Delete</button>
        </form>
        <% } %>
    </div>
    <% if (listings.length !== 0) { %>
    <div id="listings">
        <h2>Listings</h2>
        <% for (let listing of listings) { %>
        <a href="/user/<%= listing.user_id %>"><div class="listing">
            <p><%= listing.username %><% if (listing.location) { %> | <%= listing.location %><% } %> | <%= listing.price %> | <%= listing.condition %><% if (listing.info) { %> | <%= listing.info %><% } %></p>
        </div></a>
        <% } %>
    </div>
    <% } %>
</main>